<h2 class="mt-4 mb-2 text-white bg-dark-custom p-3"><%= t('admin.categories.new.title') %></h2>

<%= form_with(model: @category, url: admin_categories_path, local: true) do |form| %>
  <% if @category.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<h2 class="my-4"><%= t('admin.categories.new.title') %></h2>

  <div class="mb-3">
    <div class="col-5">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <div class="col-5">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
  <%= form.label :display, class: "form-check-label" %>
  <%= form.check_box :display,{}, true, false %>
  </div>

  <div class="mb-3">
    <%= form.submit '追加する', id: "add-category" %>
  </div>

<% end %>
<%= link_to '戻る', admin_categories_path, id: "categories_link" %>
