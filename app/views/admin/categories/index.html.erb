<h2 class="my-4"><%= t('admin.categories.index.title') %></h2>

<%= link_to 'カテゴリーを追加する', new_admin_category_path, id: "new_category_link" %>
<%= form_with url: display_update_admin_categories_path, method: :patch, local: true do |form| %>
<table class="table">
  <thead class="table-light">
    <tr>
      <th scope="col"><%= t('admin.categories.index.name') %></th>
      <th scope="col"><%= t('admin.categories.index.price') %></th>
      <th scope="col"><%= t('admin.categories.index.display') %></th>
      <th scope="col"><%= t('admin.categories.index.created_at') %></th>
      <th scope="col"></th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.price %></td>
        <td>
        <%= check_box_tag "category_ids[]", category.id, category.display %>
        </td>
        <td><%= l category.created_at %></td>
        <td><%= link_to "削除", admin_category_path(category), method: :delete, data: {confirm: "本当に削除しますか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= submit_tag "更新する", id: "update-categories" %>
<% end %>
