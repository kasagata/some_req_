<h1>メニュー管理</h1>

<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "alert alert-danger") %>
<% end %>

<%= link_to 'メニューを追加する', new_admin_category_path %>
<%= form_with url: display_update_admin_categories_path, method: :patch, local: true do |form| %>
<table class="table">
  <thead class="table-light">
    <tr>
      <th scope="col">カテゴリー名</th>
      <th scope="col">料金</th>
      <th scope="col">公開設定</th>
      <th scope="col"></th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.price %></td>
        <td>
        <%= check_box_tag "category_ids[]", category.id, category.display %>
        </td>
        <td><%= link_to "削除", admin_category_path(category), method: :delete, data: {confirm: "本当に削除しますか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= submit_tag "更新" %>
<% end %>
