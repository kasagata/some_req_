<h1>新規受注登録</h1>

<%= form_with(model: @order, url: admin_orders_path, local: true) do |f| %>

  <h4>依頼品情報</h4>
    <div class="my-3">
      <%= f.label :category_ids, "衣類カテゴリー" %>
      <%= f.collection_select :category_ids, Category.all, :id, :name, { include_blank: "選択して下さい" }, { name: "order_form[category_ids][]", class: "category-select" } %>
    </div>

    <div class="my-3">
      <%= f.label :order_note, " 備考" %>
      <%= f.text_area :order_note %>
    </div>

  <h4>お客様情報</h4>
    <div class="my-3">
      <%= f.label :name, "名前" %>
      <%= f.text_field :customer_name %>
    </div>

    <div class="my-3">
      <%= f.label :phonenumber, "電話番号" %>
      <%= f.telephone_field :customer_phonenumber %>
    </div>

    <div class="my-3">
      <%= f.label :address, "住所" %>
      <%= f.text_field :customer_address %>
    </div>

    <div class="my-3">
      <%= f.label :shipping, "地域区分" %>
      <%= f.collection_select :shipping_id, Shipping.all, :id, :name, include_blank: "選択して下さい" %>
    </div>

    <div class="my-3">
      <%= f.label :channel_shop, "店頭受付" %>
      <%= f.radio_button :channel, :shop %>
    </div>

    <div class="my-3">
      <%= f.label :channel_phonecall, "電話受付" %>
      <%= f.radio_button :channel, :phonecall %>
    </div>

    <div class="my-3">
      <%= f.label :status, "受注ステータス" %>
      <%= f.select :status, Order.statuses.keys %>
    </div>

    <div class="my-3">
      <%= f.submit %>
    </div>
<% end %>